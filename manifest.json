{
    "manifest_version": 3,
    "name": "Tweet Enhancer",
    "version": "1.0",
    "description": "Enhance tweets to make them more marketable using Claude 3.5 Sonnet.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://twitter.com/*",
      "https://x.com/*",
      "https://api.anthropic.com/*"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "background": {
      "service_worker": "background/background.js",
      "type": "module"
    }
  }